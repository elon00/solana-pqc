{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["mocha", "node"]
  },
  "include": [
    "tests/**/*",
    "scripts/**/*",
    "sdk/typescript/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target"
  ]
}
